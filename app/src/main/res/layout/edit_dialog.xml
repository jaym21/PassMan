<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit the service"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEditUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InputStyle"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/blue_500"
        android:layout_below="@id/tvEdit">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Username"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:textColor="@color/text_color"
            android:textColorHint="@color/blue_500"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InputStyle"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/blue_500"
        android:layout_below="@id/tilEditUsername">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:textColor="@color/text_color"
            android:textColorHint="@color/blue_500"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btnSave"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_check"
        app:tint="@color/blue_500"
        android:background="@drawable/service_display_bg"
        app:cornerRadius="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tilEditPassword"
        android:layout_marginTop="16dp"/>

</RelativeLayout>